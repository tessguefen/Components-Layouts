	|
	|	Check if Layout Cache needs to be deleted first.
	|
	</MvCOMMENT>

	<MvASSIGN NAME = "l.null" VALUE = "{ Check_Layout_Cache_Layout( l.layout_id ) }">

	<MvIF EXPR = "{ NOT Layout_Cache_Load_Lowlevel( l.layout_id, l.return ) }">
